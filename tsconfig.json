{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "rootDir": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "types": ["node"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
